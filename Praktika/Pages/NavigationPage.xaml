<Page x:Class="Praktika.Pages.NavigationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Praktika.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NavigationPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" >
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button  Background="#F08080" x:Name="StudButt" Click="StudButt_Click">Студенты</Button>
                <Button Background="#F08080" x:Name="EmpButt" Click="EmpButt_Click">Сотрудники</Button>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Background="#F08080" x:Name="DiscButt" Click="DiscButt_Click">Дисциплины</Button>
                <Button Background="#F08080" x:Name="ExamButt" Click="ExamButt_Click">Экзамены</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
